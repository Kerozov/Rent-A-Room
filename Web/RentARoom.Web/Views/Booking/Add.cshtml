@model RentARoom.Web.ViewModels.Hotels.AddHotelsInputViewModel
@{ this.ViewData["Title"] = "Add new hotel";
                var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key)); }

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@@</span>
        <input asp-for="Name" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" />
     
    </div>
    <div class="form-group">
        <label asp-for="Town"></label>
        <input asp-for="Town" class="form-control" />
        <span asp-validation-for="Town" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stars"></label>
        <input asp-for="Stars" class="form-control" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountRooms"></label>
        <input asp-for="CountRooms" class="form-control" />
        <span asp-validation-for="CountRooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bed"></label>
        <input asp-for="Bed" class="form-control" />
        <span asp-validation-for="Bed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div id="ServicesContainer">
        <label asp-for="Services"></label>
        <a class="btn btn-success" onclick="AddMoreServices()">+</a>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
@*'Services[" + serviceIndex + "].Name'*@
@section Scripts{
    <script>
        var serviceIndex = 0;
        function AddMoreServices() {
            console.log("AddMoreServices")
            $("#ServicesContainer").append("<div class='form-control'>Service: <input class='form-control' type='text' name='Services[" + serviceIndex + "].ServiceName'/></div>");
            serviceIndex++;
        }
    </script>
}