@model RentARoom.Web.ViewModels.Reservation.ReservationInputModel
<link href="~/css/rooms.css" rel="stylesheet" />
<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
     
    <div class="form-group">
        <label asp-for="ChechIn"></label>
        <input asp-for="ChechIn" class="form-control" />
        <span asp-validation-for="ChechIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckOut"></label>
        <input asp-for="CheckOut" class="form-control" />
        <span asp-validation-for="CheckOut" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPeople"></label>
        <input asp-for="NumberOfPeople" class="form-control" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>
 
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>